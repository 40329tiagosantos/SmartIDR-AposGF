<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ddffff"
    tools:context="pt.ul.fc.di.aplicacaosmartphone.configuracoes.ConfiguracoesAlbunsFotografias">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listaAlbuns"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/botaoConfirmarAlbuns"
        android:layout_below="@+id/botaoSelecionarTudo" />

    <Button
        android:id="@+id/botaoConfirmarAlbuns"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:background="@drawable/botaopersonalizado"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:textAllCaps="false"
        android:shadowRadius="5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cabecalho"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Switch
        android:textOn=""
        android:textOff=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="40dp"
        android:text="All "
        android:textSize="12sp"
        android:id="@+id/botaoSelecionarTudo"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cabecalho"
        />

</RelativeLayout>
